<div class= "col-xl-7" style="margin: auto; background-color: #F3F9E0; 
border-radius: 6px; padding: 15px; box-shadow: 0px 0px 2px 2px (255, 255, 255, 0.1">
<p id="notice"><%= notice %></p>
<h1 class="text-center">Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<div id="posts" class"text-center">
  <tbody>
    <% @posts.each do |post| %>
 
      <tr>
        <td><%= post.title %></td>
        <td><%= post.description %></td>
        <td><%= link_to 'Show', post, class:"btn btn-success" %></td>
        <% if user_signed_in? %>
        <td><%= link_to 'Edit', edit_post_path(post), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', post, class: "btn btn-info",  method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
<div class="d-grid gap-2 col-4 mx-auto">
  <%= link_to 'New Post', new_post_path, class: "btn btn-primary" %>
</div>
</div>

